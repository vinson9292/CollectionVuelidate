{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "./src/**/*.ts",
    "./src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "es2018",
    "module": "es2015",
    "lib": [
      "ES2015",
      "es6",
      "DOM"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}